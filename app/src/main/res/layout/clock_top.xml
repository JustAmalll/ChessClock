<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/alert_time_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginHorizontal="28dp"
        android:layout_marginVertical="16dp"
        android:contentDescription="@string/alert_time_icon_description"
        android:src="@drawable/ic_warning"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/design_default_color_error" />

    <TextView
        android:id="@+id/text_view_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?textColorTop"
        android:textSize="80sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/text_view_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:textColor="@color/grey_800"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="05:00" />

    <TextView
        android:id="@+id/text_view_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tap_to_start_hint"
        android:textColor="?textColorTop"
        android:textSize="28sp"
        tools:textColor="@color/grey_800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_clock" />

    <TextView
        android:id="@+id/text_movements_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/initial_moves_text"
        android:textColor="?textColorTop"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:textColor="@color/grey_800" />


</androidx.constraintlayout.widget.ConstraintLayout>